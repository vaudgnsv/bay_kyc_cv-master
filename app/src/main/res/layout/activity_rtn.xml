<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#484747"
    tools:context=".RtnActivity">


    <RelativeLayout
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/alert">


        <ImageView
            android:id="@+id/iv_result"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/exclamation" />


        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/krungsri_con_bol"
            android:layout_below="@id/iv_result"
            android:gravity="center"
            android:text="Text1"
            android:textColor="#0f0e0e"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/txt_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_title"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/krungsri_con"
            android:gravity="center"
            android:lineSpacingExtra="6sp"
            android:text="Text2"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <Button
            android:id="@+id/btn_ok"
            android:layout_width="247dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_round_ok"
            android:fontFamily="@font/krungsri_con_med"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_reason"
            android:gravity="center"
            android:onClick="EXIT"
            android:text="ปิด"
            android:textColor="@color/greyish_brown"
            android:textSize="20sp" />


    </RelativeLayout>
</LinearLayout>
