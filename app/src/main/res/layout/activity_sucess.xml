<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:background="@color/bayyellow">

    <ImageView
        android:layout_width="84.5dp"
        android:layout_height="84.5dp"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/group_success"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/krungsri_con_bol"
        android:layout_marginTop="20dp"
        android:text="ยินดีด้วย!"
        android:textColor="@color/greyish_brown"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/krungsri_con_med"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="-6sp"
        android:text="บันทึกข้อมูลเรียบร้อยแล้ว"
        android:textColor="@color/greyish_brown"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/roundcorner" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/result_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="5dp"
                app:srcCompat="@drawable/group_5_copy" />

            <TextView
                android:id="@+id/txt_result"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:fontFamily="@font/krungsri_con_med"
                android:gravity="center"
                android:lineSpacingExtra="-6sp"
                android:text="กรุณาเปิดแอปฯ KMA\nบนเครื่องของคุณเพื่อดำเนินการต่อ"
                android:textColor="@color/greyish_brown"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/okbtn"
            android:layout_width="280.5dp"
            android:layout_height="55.5dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/krungsri_con_med"
            android:onClick="Finish"
            android:text="ตกลง"
            android:textSize="20sp"
            android:textColor="@color/greyish_brown"
            android:background="@drawable/btn_round_ok" />

    </RelativeLayout>
</LinearLayout>