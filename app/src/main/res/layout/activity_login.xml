<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_new"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="311.5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="55dp"
                android:layout_height="86dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="31.5dp"
                android:onClick="config"
                app:srcCompat="@drawable/group_2" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="11dp"
        android:elevation="5dp"

        android:orientation="vertical">
        <Button
            android:id="@+id/btn_next"
            android:background="@drawable/iconfirm"
            android:layout_marginTop="38.9px"
            android:layout_marginLeft="30.5px"
            android:layout_width="659px"
            android:layout_height="243px"/>

        <Button
            android:id="@+id/btn_verify"
            android:layout_width="659px"
            android:layout_height="243px"
            android:layout_marginLeft="30.5px"
            android:text="Customer\nverification"
            android:textAllCaps="false"
            android:textSize="22dp"
            android:background="@drawable/iconfirm_empty" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_marginTop="8dp"
        android:layout_marginRight="28dp"
        android:fontFamily="@font/krungsri_con"
        android:text="V.Demo"
        android:onClick="DEMO_TEST"
        android:textColor="#8d8d8d"
        android:textSize="10sp" />
</LinearLayout>